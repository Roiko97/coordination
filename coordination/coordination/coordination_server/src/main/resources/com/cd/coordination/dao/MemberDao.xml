<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cd.coordination.dao.MemberDao">
    <resultMap id="member" type="com.cd.coordination.entity.Member">
        <id property="id" column="id" javaType="Integer"/>
        <result property="mark" column="mark" javaType="String"/>
        <result property="student_id" column="student_id" javaType="String"/>
        <result property="position" column="position" javaType="String"/>
        <result property="name" column="name" javaType="String"/>
        <result property="datetime" column="datetime" javaType="String"/>
    </resultMap>

    <select id="memberId" resultType="com.cd.coordination.entity.Member">
        select * from member
        <where>
            <if test="student_id !=null">
                and student_id = #{student_id}
            </if>
        </where>
    </select>

    <select id="checkMemMark" resultType="com.cd.coordination.entity.Member">
        select * from member
        <where>
            <if test="student_id !=null">
                and student_id = #{student_id}
            </if>
        </where>
    </select>

    <select id="teamMember" resultType="com.cd.coordination.entity.Member">
        select * from member
        <where>
            <if test="student_id!=null">
                and student_id=#{student_id}
            </if>
            <if test="mark!=null">
                and mark=#{mark}
            </if>
        </where>
    </select>

    <select id="memberFind" resultType="com.cd.coordination.entity.Member">
        select * from member
        <where>
            <if test="mark!=null">
                and mark=#{mark}
            </if>
        </where>
    </select>

    <insert id="memberInsert">
		insert into member(mark,student_id,name) values(#{mark},#{student_id},#{name})
	</insert>

    <update id="memberRevise" parameterType="string">
        update member
        <set>
            <if test="position !=null">
                position = #{position}
            </if>
        </set>
        <where>
            student_id = #{student_id} and mark = #{mark}
        </where>
    </update>

    <delete id="leaveTeam">
		delete from member where mark=#{mark} and student_id=#{student_id}
	</delete>

</mapper>